@model RegisterViewModel

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="~/kayıt-kayit\style.css" rel="stylesheet" />


    <title>Form</title>
</head>

<body>

    <div id="popup" title="Popup Başlığı">
        <h3>@ViewBag.message</h3>
    </div>

    <div id="kayitFormu">
        <form action="Register" method="post">
            <h3>Kullanıcı Kayıt Formu</h3>

            @*            <input type="text" name="adiniz" placeholder="Kullanıcı Adınızı Giriniz" />

            <input type="email" name="eposta" placeholder="Mail Adresinizi Giriniz" />

            <input type="password" name="parola" placeholder="Şifrenizi Giriniz" />*@
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Name)
                </div>
                <div class="col-md-9">
                    <input type="text" id="name" class="form-control" asp-for="Name" />
           
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Surname)
                </div>
                <div class="col-md-9">
                    <input type="text" id="surname" class="form-control" asp-for="Surname" />

        
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Username)
                </div>
                <div class="col-md-9">

                    <input type="text" id="username" class="form-control" asp-for="Username" />

        
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Email)
                </div>
                <div class="col-md-9">

                    <input type="email" id="mail" class="form-control" asp-for="Email" />
     
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Password)
                </div>
                <div class="col-md-9">

                    <input type="password" id="password" class="form-control" asp-for="Password" />

                </div>
            </div>


            <input class="btn" type="submit" value="KAYIT OL" id="submitButton" />

        </form>

    </div>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script src="~/js/Script.js"></script>


</body>
</html>