@using Case_EntityLayer.Concrete;
@model SurveyAnswer


@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        .btn-primary {
            border-radius: 15px;
        }

            .btn-primary:hover {
                background-color: aqua;
                font-size: 20px;
            }
    </style>

    <title>Anket</title>
</head>

<body>

    <section id="header">

        <div class="bg-white text-center py-4">
            <div class="container">
                <h2 class="text-danger display-4 my-4 ">Evden Calisma Anketi</h2>
            </div>
        </div>


    </section>

    <div class="result d-none py-4 bg white text-center">
        <div class="container lead">
            <p><span class="text-danger display-4 p-3">0%</span>Ofise Dönmek İstiyorsun</p>
        </div>
    </div>


    <section id="question tum">
        <div class="bg-secondary py-3">

            <div class="container">


                <form class="soru-formu text-white" method="post">
                    <div class="my-4">
                        <p>1. Ofiste Daha Verimli Çalışıyorum</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q1" value="E" checked asp-for="Survey1">
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q1" value="H" asp-for="Survey1">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    </div>
                    <hr>
                    <div class="my-4">
                        <p>2. Ofise Tam Zamanlı Dönmek İstiyorum</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q2" value="E" checked asp-for="Survey2">
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q2" value="H" asp-for="Survey2">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    </div>
                    <hr>
                    <div class="my-4">
                        <p>3. Evdeyken Teknik Sorunlar Daha Zor Çözülüyor</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q3" value="E" checked asp-for="Survey3">
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q3" value="H" asp-for="Survey3">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    </div>
                    <hr>
                    <div class="my-4">
                        <p>4. Evdeyken Jiradaki Haftalık Taskları Yetiştirmekte Zorlanıyorum</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q4" value="E" checked asp-for="Survey4">
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q4" value="H" asp-for="Survey4">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    </div>
                    <hr>
                    <div class="my-4">
                        <p>5. Bir ofisiniz / çalışmak için ayrı bir odanız var mı?</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q5" value="E" checked asp-for="Survey5">
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="q5" value="H" asp-for="Survey5">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    </div>


                    <div class="text-center" >
                        <input type="submit" class="btn-primary">
                    </div>
                </form>

            </div>

         




        </div>


    </section>

    <script src="~/anket/main.js"></script>

</body>

</html>